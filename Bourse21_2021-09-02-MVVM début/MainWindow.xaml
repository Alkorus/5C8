<Window x:Class="Bourse21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bourse21"
        mc:Ignorable="d"
        Title="Bourse 21" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TabControl>
                <TabItem Selector.Selected="OnTabProprioSelected" Header="Proprios">
                    <ContentPresenter Name="PresenteurProprio"></ContentPresenter>
                </TabItem>
                <TabItem Selector.Selected="OnTabSocieteSelected" Header="Sociétés">
                    <ContentPresenter Name="PresenteurSocietes"></ContentPresenter>
                </TabItem>
                <TabItem Selector.Selected="OnTabTrxSelected" Header="TRX">
                    <ContentPresenter Name="PresenteurTrx"></ContentPresenter>
                </TabItem>
            </TabControl>
        </StackPanel>

    </Grid>
</Window>
